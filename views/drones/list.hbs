<div class="container">
    <h2 class="mb-5">Available drones</h2>
    <div class="row">
        {{#each drones}}
        <div class="col-md-4 ">
            <h3>{{name}}</h3>
            <p>
                Propellers: {{propellers}} <br>
                La velocidad Maxima: {{maxSpeed}}
            </p>
            <a href="/drones/{{id}}/edit" class="btn btn-dark">Editar</a>
            <form method="POST" action="/drones/{{id}}/delete" style="display: inline;">
                <input type="submit" value="Eliminar" class="btn btn-danger">
            </form>
            <hr>
        </div>
        {{/each}}
    </div>
    <div class="mb-5">
        <a href="/drones/create" class="btn btn-success mb-3">Crear Drones</a>
    </div>
</div>